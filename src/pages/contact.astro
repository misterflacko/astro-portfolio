---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import { Button } from "../components/ui/button";
import { Input } from "../components/ui/input";
import { Textarea } from "../components/ui/textarea";
import { Card, CardContent } from "../components/ui/card";
import { ArrowRight, Linkedin, Github, CheckCircle } from 'lucide-react';

const pageTitle = "Contact";
const pageDescription = "Get in touch with Austin Crockett. Let's discuss your digital marketing needs, SEO strategy, or content marketing project.";
---

<!doctype html>
<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead title={`${pageTitle} | Austin Crockett`} description={pageDescription} />
  </head>
  <body class="bg-background text-foreground">
    <Header />
    <main class="full-width">
      <!-- Hero Section -->
      <HeroSection
        title="Get In"
        titleHighlight="Touch"
        subtitle="Have a project in mind? Let's discuss how I can help grow your business through strategic digital marketing."
        variant="compact"
      />

      <!-- Contact Form Section -->
      <section class="py-12 md:py-16 lg:py-20 px-6 bg-background">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-[1.5fr_1fr] gap-12 lg:gap-16">
            <!-- Form -->
            <div class="max-w-xl lg:max-w-none">
              <form
                name="contact"
                method="POST"
                data-netlify="true"
                netlify-honeypot="bot-field"
                action="/contact?success=true"
                class="flex flex-col gap-6"
              >
                <!-- Hidden form name for Netlify -->
                <input type="hidden" name="form-name" value="contact" />

                <!-- Honeypot field (spam prevention) -->
                <p class="hidden" aria-hidden="true">
                  <label>Don't fill this out if you're human: <input name="bot-field" /></label>
                </p>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                  <!-- Name Field -->
                  <div class="flex flex-col gap-2">
                    <label for="name" class="text-sm font-medium text-foreground">Name *</label>
                    <Input
                      type="text"
                      id="name"
                      name="name"
                      required
                      placeholder="Your name"
                      className="h-12"
                    />
                  </div>

                  <!-- Email Field -->
                  <div class="flex flex-col gap-2">
                    <label for="email" class="text-sm font-medium text-foreground">Email *</label>
                    <Input
                      type="email"
                      id="email"
                      name="email"
                      required
                      placeholder="your@email.com"
                      className="h-12"
                    />
                  </div>
                </div>

                <!-- Subject Field -->
                <div class="flex flex-col gap-2">
                  <label for="subject" class="text-sm font-medium text-foreground">Subject *</label>
                  <Input
                    type="text"
                    id="subject"
                    name="subject"
                    required
                    placeholder="What's this about?"
                    className="h-12"
                  />
                </div>

                <!-- Message Field -->
                <div class="flex flex-col gap-2">
                  <label for="message" class="text-sm font-medium text-foreground">Message *</label>
                  <Textarea
                    id="message"
                    name="message"
                    rows={5}
                    required
                    placeholder="Tell me about your project or question..."
                    className="min-h-[150px] resize-y"
                  />
                </div>

                <!-- Submit Button -->
                <div class="pt-2">
                  <Button type="submit" className="rounded-full px-8 py-6 text-base font-medium gap-2 group">
                    Send Message
                    <ArrowRight className="h-4 w-4 transition-transform group-hover:translate-x-1" />
                  </Button>
                </div>
              </form>

              <!-- Success Message -->
              <div id="success-message" class="hidden p-8 text-center bg-primary/10 border border-primary/30 rounded-xl text-primary">
                <CheckCircle className="h-6 w-6 mx-auto mb-4" />
                <h3 class="text-xl font-medium text-foreground mb-2">Message sent successfully!</h3>
                <p class="text-[15px] text-muted-foreground">I'll get back to you as soon as possible.</p>
              </div>
            </div>

            <!-- Contact Info -->
            <aside>
              <Card className="bg-card/50 border-border/50 lg:sticky lg:top-24">
                <CardContent className="p-8 flex flex-col gap-6">
                  <h2 class="text-2xl font-semibold text-foreground tracking-tight">Let's Connect</h2>
                  <p class="text-[15px] leading-relaxed text-muted-foreground">
                    Whether you're looking to improve your search visibility, develop a content strategy, or make sense of your marketing data, I'd love to hear about your challenges.
                  </p>

                  <div class="flex flex-col gap-3 pt-2">
                    <a
                      href="https://linkedin.com/in/austincrockett"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-3 px-4 py-3 text-[15px] font-medium text-foreground bg-muted/50 hover:bg-muted border border-border/50 hover:border-primary rounded-xl transition-all"
                    >
                      <Linkedin className="h-5 w-5 shrink-0" />
                      Connect on LinkedIn
                    </a>
                    <a
                      href="https://github.com/misterflacko"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-3 px-4 py-3 text-[15px] font-medium text-foreground bg-muted/50 hover:bg-muted border border-border/50 hover:border-primary rounded-xl transition-all"
                    >
                      <Github className="h-5 w-5 shrink-0" />
                      View GitHub
                    </a>
                  </div>
                </CardContent>
              </Card>
            </aside>
          </div>
        </div>
      </section>
    </main>
    <Footer />

    <script is:inline>
      // Show success message if redirected after form submission
      if (window.location.search.includes('success=true')) {
        const successMessage = document.getElementById('success-message');
        const form = document.querySelector('form');
        if (successMessage) {
          successMessage.classList.remove('hidden');
        }
        if (form) {
          form.style.display = 'none';
        }
        // Clean up URL
        history.replaceState(null, '', window.location.pathname);
      }
    </script>
  </body>
</html>
