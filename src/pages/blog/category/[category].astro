---
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/sections/Header.astro';
import Footer from '../../../components/sections/Footer.astro';
import PostCard from '../../../components/ui/card/PostCard.astro';
import { getCategoryMeta, slugifyCategory } from '../../../data/categories';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const categories = [
    ...new Set(
      posts
        .map((p) => p.data.category || null)
        .filter((v): v is string => Boolean(v))
        .map((name) => slugifyCategory(name))
    ),
  ];
  return categories.map((category) => ({ params: { category } }));
}

const { category } = Astro.params;
const posts = (await getCollection('blog')).filter((p) => slugifyCategory(p.data.category || '') === category);
const meta = getCategoryMeta(category);
---
<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead title={`${meta.title} - Category`} description={meta.description} />
    <link rel="alternate" type="application/rss+xml" title={`Category: ${category} feed`} href={`/rss/category/${category}.xml`} />
  </head>
  <body class="bg-background text-foreground">
    <Header />
    <main class="mx-auto max-w-6xl px-6 py-10 space-y-6">
      <div class="flex items-center justify-between gap-3">
        <h1 class="text-3xl font-normal text-foreground">{meta.title}</h1>
        <a class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-full border border-border bg-muted/50 text-foreground hover:bg-muted hover:border-primary transition-colors" href={`/rss/category/${category}.xml`}>Subscribe</a>
      </div>
      <p class="text-muted-foreground">{meta.description}</p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {posts.map((p) => (
          <PostCard post={p} />
        ))}
      </div>
    </main>
    <Footer />
  </body>
</html>


