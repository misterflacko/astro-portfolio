---
/**
 * ProcessSection - Horizontal Timeline "How I Work"
 *
 * Features:
 * - Horizontal timeline with progress line and step nodes
 * - Large watermark step numbers as faded background elements
 * - Auto-cycling animation (4s per step) with progress line
 * - Pulsing nodes on active step
 * - Dark gradient background for contrast with adjacent sections
 * - Click-to-select step functionality
 * - Full dark/light mode support
 * - Respects prefers-reduced-motion
 */

interface ProcessStep {
  number: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "How I Work", subtitle } = Astro.props;

const steps: ProcessStep[] = [
  {
    number: "01",
    title: "Discovery & Visibility Audit",
    description: "Comprehensive analysis of your current SEO health, AI search presence, and competitive landscape across Google, ChatGPT, Perplexity, and emerging AI platforms."
  },
  {
    number: "02",
    title: "Strategy & Roadmap",
    description: "Custom roadmap combining traditional SEO tactics with Generative Engine Optimization (GEO) strategies to maximize visibility across all search surfaces."
  },
  {
    number: "03",
    title: "Implementation & Optimization",
    description: "Execute technical SEO fixes, content optimization, schema markup, and AI-friendly content structuring for maximum citation potential."
  },
  {
    number: "04",
    title: "Monitor & Iterate",
    description: "Continuous performance tracking across traditional search and AI platforms, with data-driven iterations to maintain and grow visibility."
  }
];
---

<section class="process-section" aria-labelledby="process-title">
  <div class="process-container">
    <!-- Section Header -->
    <header class="process-header">
      <h2 id="process-title" class="process-title">{title}</h2>
      {subtitle && <p class="process-subtitle">{subtitle}</p>}
    </header>

    <!-- Horizontal Timeline -->
    <div class="timeline" role="list">
      <!-- Track with Progress -->
      <div class="timeline__track">
        <div class="timeline__progress"></div>
      </div>

      <!-- Steps -->
      <div class="timeline__steps">
        {steps.map((step, index) => (
          <div
            class={`timeline__step ${index === 0 ? 'timeline__step--active' : ''}`}
            data-step={index}
            role="listitem"
            tabindex="0"
          >
            <!-- Watermark Number -->
            <span class="timeline__watermark" aria-hidden="true">{step.number}</span>

            <!-- Node Circle -->
            <div class="timeline__node">
              <div class="timeline__node-inner"></div>
            </div>

            <!-- Content Below Node -->
            <div class="timeline__content">
              <span class="timeline__number">{step.number}</span>
              <h3 class="timeline__step-title">{step.title}</h3>
              <p class="timeline__step-desc">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     PROCESS SECTION - Horizontal Timeline
     Dark gradient background for contrast with white sections above/below
     ═══════════════════════════════════════════════════════════════ */

  .process-section {
    /* Dark mode defaults */
    --ps-bg-start: #0a0d12;
    --ps-bg-end: #0f1318;
    --ps-accent: #12EACB;
    --ps-accent-rgb: 18, 234, 203;
    --ps-text-heading: #ffffff;
    --ps-text-body: rgba(255, 255, 255, 0.7);
    --ps-text-muted: rgba(255, 255, 255, 0.5);
    --ps-line-color: rgba(18, 234, 203, 0.2);
    --ps-line-fill: rgba(18, 234, 203, 0.7);
    --ps-watermark: rgba(18, 234, 203, 0.04);
    --ps-watermark-active: rgba(18, 234, 203, 0.1);

    width: 100%;
    background: linear-gradient(180deg, var(--ps-bg-start) 0%, var(--ps-bg-end) 100%);
    padding: clamp(3rem, 6vw, 5rem) 1.5rem;
    position: relative;
    overflow: hidden;
  }

  /* Light mode overrides */
  :global([data-theme="light"]) .process-section {
    --ps-bg-start: #0f172a;
    --ps-bg-end: #1e293b;
    --ps-accent: #2dd4bf;
    --ps-accent-rgb: 45, 212, 191;
    --ps-text-heading: #ffffff;
    --ps-text-body: rgba(255, 255, 255, 0.75);
    --ps-text-muted: rgba(255, 255, 255, 0.6);
    --ps-line-color: rgba(45, 212, 191, 0.2);
    --ps-line-fill: rgba(45, 212, 191, 0.7);
    --ps-watermark: rgba(45, 212, 191, 0.03);
    --ps-watermark-active: rgba(45, 212, 191, 0.08);
  }

  /* Subtle noise texture overlay */
  .process-section::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.02;
    pointer-events: none;
  }

  .process-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  /* ═══════════════════════════════════════════════════════════════
     SECTION HEADER
     ═══════════════════════════════════════════════════════════════ */

  .process-header {
    text-align: center;
    margin-bottom: clamp(2rem, 4vw, 3rem);
  }

  .process-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--ps-text-heading);
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .process-subtitle {
    font-size: 1rem;
    color: var(--ps-text-muted);
    margin: 0 auto;
    max-width: 650px;
    line-height: 1.6;
  }

  /* ═══════════════════════════════════════════════════════════════
     HORIZONTAL TIMELINE
     ═══════════════════════════════════════════════════════════════ */

  .timeline {
    position: relative;
    padding: 2rem 0 0;
  }

  /* Horizontal Track */
  .timeline__track {
    position: absolute;
    top: calc(2rem + 12px); /* Align with center of nodes */
    left: 0;
    right: 0;
    height: 2px;
    background: var(--ps-line-color);
    z-index: 1;
  }

  .timeline__progress {
    position: absolute;
    top: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background: var(--ps-line-fill);
    transition: width 0.5s ease-out;
  }

  /* Steps Container */
  .timeline__steps {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    position: relative;
    z-index: 2;
  }

  /* ═══════════════════════════════════════════════════════════════
     INDIVIDUAL STEP
     ═══════════════════════════════════════════════════════════════ */

  .timeline__step {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    cursor: pointer;
    padding: 0 0.5rem;
  }

  .timeline__step:focus {
    outline: none;
  }

  .timeline__step:focus-visible .timeline__node {
    outline: 2px solid var(--ps-accent);
    outline-offset: 4px;
  }

  /* ═══════════════════════════════════════════════════════════════
     NODE (Circle on Timeline)
     ═══════════════════════════════════════════════════════════════ */

  .timeline__node {
    position: relative;
    width: 24px;
    height: 24px;
    border: 2px solid var(--ps-accent);
    border-radius: 50%;
    background: var(--ps-bg-start);
    z-index: 3;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .timeline__node-inner {
    position: absolute;
    inset: 4px;
    border-radius: 50%;
    background: transparent;
    transition: background-color 0.3s ease;
  }

  .timeline__step--active .timeline__node {
    background: var(--ps-accent);
    box-shadow: 0 0 20px rgba(var(--ps-accent-rgb), 0.5);
    transform: scale(1.15);
  }

  .timeline__step--active .timeline__node-inner {
    background: var(--ps-accent);
  }

  /* Hover state for non-active steps */
  .timeline__step:not(.timeline__step--active):hover .timeline__node {
    transform: scale(1.1);
    box-shadow: 0 0 12px rgba(var(--ps-accent-rgb), 0.3);
  }

  /* ═══════════════════════════════════════════════════════════════
     WATERMARK NUMBER
     ═══════════════════════════════════════════════════════════════ */

  .timeline__watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 800;
    color: var(--ps-watermark);
    line-height: 1;
    letter-spacing: -0.05em;
    pointer-events: none;
    user-select: none;
    transition: color 0.4s ease;
    z-index: 0;
  }

  .timeline__step--active .timeline__watermark {
    color: var(--ps-watermark-active);
  }

  /* ═══════════════════════════════════════════════════════════════
     CONTENT
     ═══════════════════════════════════════════════════════════════ */

  .timeline__content {
    margin-top: 1.5rem;
    opacity: 0.5;
    transition: opacity 0.4s ease, transform 0.4s ease;
    transform: translateY(4px);
    position: relative;
    z-index: 1;
  }

  .timeline__step--active .timeline__content {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline__step:hover .timeline__content {
    opacity: 0.8;
  }

  .timeline__number {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--ps-accent);
    letter-spacing: 0.15em;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
  }

  .timeline__step-title {
    font-size: clamp(1rem, 2vw, 1.125rem);
    font-weight: 600;
    color: var(--ps-text-heading);
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  .timeline__step-desc {
    font-size: 0.875rem;
    color: var(--ps-text-body);
    line-height: 1.6;
    margin: 0;
  }

  /* ═══════════════════════════════════════════════════════════════
     ANIMATIONS
     ═══════════════════════════════════════════════════════════════ */

  @keyframes nodePulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(var(--ps-accent-rgb), 0.5); }
    50% { box-shadow: 0 0 0 10px rgba(var(--ps-accent-rgb), 0); }
  }

  .timeline__step--active .timeline__node {
    animation: nodePulse 2s ease-out infinite;
  }

  /* ═══════════════════════════════════════════════════════════════
     REDUCED MOTION
     ═══════════════════════════════════════════════════════════════ */

  @media (prefers-reduced-motion: reduce) {
    .timeline__progress,
    .timeline__content,
    .timeline__node,
    .timeline__watermark {
      transition: none;
    }

    .timeline__step--active .timeline__node {
      animation: none;
      box-shadow: 0 0 20px rgba(var(--ps-accent-rgb), 0.5);
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE - Tablet (2x2 grid)
     ═══════════════════════════════════════════════════════════════ */

  @media (max-width: 1023px) {
    .timeline__steps {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem 1rem;
    }

    .timeline__track {
      display: none;
    }

    .timeline__step {
      padding: 0;
    }

    .timeline__watermark {
      font-size: 5rem;
    }

    .timeline__step-desc {
      font-size: 0.8125rem;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE - Mobile (single column)
     ═══════════════════════════════════════════════════════════════ */

  @media (max-width: 639px) {
    .process-section {
      padding: 2.5rem 1rem;
    }

    .timeline__steps {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .timeline__watermark {
      font-size: 4rem;
      top: 0;
      transform: translate(-50%, -30%);
    }

    .timeline__content {
      margin-top: 1rem;
    }

    .timeline__step-title {
      font-size: 1.125rem;
    }

    .timeline__step-desc {
      font-size: 0.875rem;
      max-width: 320px;
      margin: 0 auto;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE - Large Desktop
     ═══════════════════════════════════════════════════════════════ */

  @media (min-width: 1200px) {
    .process-section {
      padding: clamp(4rem, 7vw, 6rem) 2.5rem;
    }

    .timeline__steps {
      gap: 2rem;
    }

    .timeline__watermark {
      font-size: 10rem;
    }

    .timeline__step-desc {
      font-size: 0.9375rem;
    }
  }
</style>

<script>
  (function() {
    const timeline = document.querySelector('.timeline');
    if (!timeline) return;

    // Respect reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    const steps = timeline.querySelectorAll('.timeline__step');
    const progress = timeline.querySelector('.timeline__progress') as HTMLElement;
    const stepCount = steps.length;
    const stepDuration = 4000; // 4 seconds per step
    let currentStep = 0;
    let intervalId: number | null = null;
    let resumeTimeoutId: number | null = null;

    function setActiveStep(index: number) {
      steps.forEach((step, i) => {
        step.classList.toggle('timeline__step--active', i === index);
      });

      // Update horizontal progress (25%, 50%, 75%, 100%)
      // We calculate the progress to reach the center of each step
      const progressPercent = ((index + 1) / stepCount) * 100;
      if (progress) {
        progress.style.width = progressPercent + '%';
      }
    }

    function cycleSteps() {
      currentStep = (currentStep + 1) % stepCount;
      setActiveStep(currentStep);
    }

    function startCycling() {
      if (prefersReducedMotion || intervalId) return;
      intervalId = window.setInterval(cycleSteps, stepDuration);
    }

    function stopCycling() {
      if (intervalId) {
        clearInterval(intervalId);
        intervalId = null;
      }
      if (resumeTimeoutId) {
        clearTimeout(resumeTimeoutId);
        resumeTimeoutId = null;
      }
    }

    function scheduleResume() {
      stopCycling();
      // Resume after 5 seconds of inactivity
      resumeTimeoutId = window.setTimeout(() => {
        startCycling();
      }, 5000);
    }

    // Initialize
    setActiveStep(0);

    // Use Intersection Observer to only animate when visible
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          startCycling();
        } else {
          stopCycling();
        }
      });
    }, { threshold: 0.3 });

    observer.observe(timeline);

    // Allow manual step selection on click
    steps.forEach((step, index) => {
      step.addEventListener('click', () => {
        currentStep = index;
        setActiveStep(index);
        scheduleResume();
      });

      // Keyboard support
      step.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          currentStep = index;
          setActiveStep(index);
          scheduleResume();
        }
      });
    });
  })();
</script>
