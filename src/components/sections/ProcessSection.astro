---
interface ProcessStep {
  number: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "My Process", subtitle } = Astro.props;

const steps: ProcessStep[] = [
  {
    number: "01",
    title: "Discovery & Audit",
    description: "Deep-dive into your current digital presence, competitive landscape, and business goals to identify opportunities for growth."
  },
  {
    number: "02",
    title: "Strategy Development",
    description: "Craft a data-driven roadmap combining SEO, content, and emerging AI-powered search strategies tailored to your market."
  },
  {
    number: "03",
    title: "Implementation",
    description: "Execute technical optimizations, content creation, and GEO (Generative Engine Optimization) enhancements for maximum visibility."
  },
  {
    number: "04",
    title: "Measure & Optimize",
    description: "Continuously monitor performance across traditional search and AI-powered platforms, iterating based on real data."
  }
];
---

<section class="process-section">
  <div class="process-header">
    <h2 class="process-title">{title}</h2>
    {subtitle && <p class="process-subtitle">{subtitle}</p>}
  </div>

  <div class="process-grid">
    {steps.map((step) => (
      <div class="process-card">
        <span class="process-number">{step.number}</span>
        <h3 class="process-card-title">{step.title}</h3>
        <p class="process-card-description">{step.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .process-section {
    width: 100%;
  }

  .process-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .process-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0 0 0.75rem;
    letter-spacing: -0.02em;
  }

  .process-subtitle {
    font-size: 1rem;
    color: hsl(var(--muted-foreground));
    margin: 0;
    max-width: 600px;
    margin-inline: auto;
  }

  .process-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .process-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .process-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .process-card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 1rem;
    padding: 1.75rem;
    transition: all 0.2s ease;
  }

  .process-card:hover {
    border-color: hsl(var(--primary));
    transform: translateY(-2px);
    box-shadow: 0 8px 24px -4px hsl(var(--primary) / 0.1);
  }

  .process-number {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 700;
    color: hsl(var(--primary));
    margin-bottom: 1rem;
    letter-spacing: 0.05em;
  }

  .process-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin: 0 0 0.75rem;
  }

  .process-card-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: hsl(var(--muted-foreground));
    margin: 0;
  }
</style>
