---
/**
 * AIServicesCards - AI Implementation Services Grid
 *
 * Features:
 * - 4 service cards with icons, descriptions, and bullet lists
 * - Responsive grid: 1 col (mobile) → 2 cols (tablet) → 4 cols (desktop)
 * - Theme-aware with full dark/light mode support
 * - Hover effects with lift and accent border
 * - Links to individual service landing pages
 */

import { Zap, TrendingUp, Settings, Bot, ArrowRight } from 'lucide-react';
import type { AIService } from '../../data/ai-services';

interface Props {
  title?: string;
  subtitle?: string;
  services: AIService[];
}

const { title, subtitle, services } = Astro.props;

// Map icon names to components
const iconComponents = {
  Zap,
  TrendingUp,
  Settings,
  Bot
};
---

<section class="ai-services" aria-labelledby="ai-services-title">
  <div class="ai-services__container">
    <!-- Section Header -->
    {(title || subtitle) && (
      <header class="ai-services__header">
        {title && <h2 id="ai-services-title" class="ai-services__title">{title}</h2>}
        {subtitle && <p class="ai-services__subtitle">{subtitle}</p>}
      </header>
    )}

    <!-- Services Grid -->
    <div class="ai-services__grid">
      {services.map((service, index) => {
        const IconComponent = iconComponents[service.icon as keyof typeof iconComponents];
        return (
          <article class="ai-services__card" style={`--animation-delay: ${index * 100}ms`}>
            <!-- Icon -->
            <div class="ai-services__icon-box">
              <IconComponent className="ai-services__icon" />
            </div>

            <!-- Content -->
            <h3 class="ai-services__card-title">{service.title}</h3>
            <p class="ai-services__card-desc">{service.description}</p>

            <!-- Bullet List -->
            <ul class="ai-services__list">
              {service.items.map((item) => (
                <li class="ai-services__list-item">{item}</li>
              ))}
            </ul>

            <!-- CTA Link -->
            <a href={service.href} class="ai-services__link group">
              Learn more
              <ArrowRight className="ai-services__arrow" />
            </a>
          </article>
        );
      })}
    </div>
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     SECTION WRAPPER - Light Background with Subtle Tint
     ═══════════════════════════════════════════════════════════════ */
  .ai-services {
    --section-bg: hsl(var(--muted) / 0.3);
    --card-bg: hsl(var(--card));
    --card-border: hsl(var(--border));
    --card-border-hover: hsl(var(--primary));
    --icon-bg: hsl(var(--primary) / 0.1);
    --icon-color: hsl(var(--primary));
    --text-heading: hsl(var(--foreground));
    --text-body: hsl(var(--muted-foreground));
    --text-link: hsl(var(--primary));
    --bullet-color: hsl(var(--primary));

    width: 100%;
    background: var(--section-bg);
    padding: clamp(3rem, 8vw, 6rem) 1.5rem;
    position: relative;
  }

  /* Dark mode adjustments */
  :global(.dark) .ai-services {
    --section-bg: hsl(222 47% 8%);
    --card-bg: hsl(222 47% 11%);
    --card-border: hsl(222 47% 18%);
    --icon-bg: hsl(var(--primary) / 0.15);
  }

  .ai-services__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* ═══════════════════════════════════════════════════════════════
     SECTION HEADER
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__header {
    text-align: center;
    margin-bottom: clamp(2rem, 5vw, 3.5rem);
  }

  .ai-services__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--text-heading);
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .ai-services__subtitle {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--text-body);
    margin: 0 auto;
    max-width: 700px;
    line-height: 1.6;
  }

  /* ═══════════════════════════════════════════════════════════════
     GRID LAYOUT - Responsive 1 → 2 → 4 columns
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .ai-services__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .ai-services__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.25rem;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     SERVICE CARD
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__card {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 12px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    transition:
      transform 0.2s ease-out,
      border-color 0.2s ease-out,
      box-shadow 0.2s ease-out;

    /* Staggered animation */
    opacity: 0;
    transform: translateY(16px);
    animation: cardFadeIn 0.5s ease-out forwards;
    animation-delay: var(--animation-delay, 0ms);
  }

  .ai-services__card:hover {
    transform: translateY(-4px);
    border-color: var(--card-border-hover);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  :global(.dark) .ai-services__card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  }

  @keyframes cardFadeIn {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-services__card {
      animation: none;
      opacity: 1;
      transform: none;
    }
    .ai-services__card:hover {
      transform: none;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     ICON BOX
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__icon-box {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    background: var(--icon-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .ai-services__icon-box :global(.ai-services__icon) {
    width: 24px;
    height: 24px;
    color: var(--icon-color);
  }

  /* ═══════════════════════════════════════════════════════════════
     CARD TYPOGRAPHY
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-heading);
    margin: 0 0 0.5rem;
    line-height: 1.3;
  }

  .ai-services__card-desc {
    font-size: 0.875rem;
    color: var(--text-body);
    margin: 0 0 1rem;
    line-height: 1.5;
  }

  /* ═══════════════════════════════════════════════════════════════
     BULLET LIST
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__list {
    list-style: none;
    margin: 0 0 1.25rem;
    padding: 0;
    flex: 1;
  }

  .ai-services__list-item {
    position: relative;
    padding-left: 1rem;
    font-size: 0.8125rem;
    color: var(--text-body);
    line-height: 1.6;
    margin-bottom: 0.375rem;
  }

  .ai-services__list-item::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.5em;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--bullet-color);
  }

  /* ═══════════════════════════════════════════════════════════════
     CTA LINK
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-link);
    text-decoration: none;
    transition: gap 0.2s ease-out;
    margin-top: auto;
  }

  .ai-services__link:hover {
    gap: 0.625rem;
  }

  .ai-services__link :global(.ai-services__arrow) {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease-out;
  }

  .ai-services__link:hover :global(.ai-services__arrow) {
    transform: translateX(2px);
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE ADJUSTMENTS
     ═══════════════════════════════════════════════════════════════ */
  @media (max-width: 639px) {
    .ai-services {
      padding: 2.5rem 1rem;
    }

    .ai-services__card {
      padding: 1.25rem;
    }

    .ai-services__icon-box {
      width: 40px;
      height: 40px;
    }

    .ai-services__icon-box :global(.ai-services__icon) {
      width: 20px;
      height: 20px;
    }
  }

  @media (min-width: 1024px) {
    .ai-services__card {
      padding: 1.25rem;
    }

    .ai-services__card-title {
      font-size: 1rem;
    }

    .ai-services__card-desc {
      font-size: 0.8125rem;
    }

    .ai-services__list-item {
      font-size: 0.75rem;
    }
  }

  @media (min-width: 1280px) {
    .ai-services__card {
      padding: 1.5rem;
    }

    .ai-services__card-title {
      font-size: 1.125rem;
    }
  }
</style>
