---
/**
 * AIServicesCards - AI Implementation Services Grid
 *
 * Features:
 * - 4 service cards with icons, descriptions, and bullet lists
 * - Responsive grid: 1 col (mobile) → 2 cols (tablet) → 4 cols (desktop)
 * - Theme-aware with full dark/light mode support
 * - Hover effects with lift and accent border
 * - Links to individual service landing pages
 */

import { Zap, TrendingUp, Settings, Bot, ArrowRight } from 'lucide-react';
import type { AIService } from '../../data/ai-services';

interface Props {
  title?: string;
  subtitle?: string;
  services: AIService[];
}

const { title, subtitle, services } = Astro.props;

// Map icon names to components
const iconComponents = {
  Zap,
  TrendingUp,
  Settings,
  Bot
};
---

<section class="ai-services" aria-labelledby="ai-services-title">
  <div class="ai-services__container">
    <!-- Section Header -->
    {(title || subtitle) && (
      <header class="ai-services__header">
        {title && <h2 id="ai-services-title" class="ai-services__title">{title}</h2>}
        {subtitle && <p class="ai-services__subtitle">{subtitle}</p>}
      </header>
    )}

    <!-- Services Grid -->
    <div class="ai-services__grid">
      {services.map((service, index) => {
        const IconComponent = iconComponents[service.icon as keyof typeof iconComponents];
        return (
          <article class="ai-services__card" style={`--animation-delay: ${index * 100}ms`}>
            <!-- Icon -->
            <div class="ai-services__icon-box">
              <IconComponent className="ai-services__icon" />
            </div>

            <!-- Content -->
            <h3 class="ai-services__card-title">{service.title}</h3>
            <p class="ai-services__card-desc">{service.description}</p>

            <!-- Bullet List -->
            <ul class="ai-services__list">
              {service.items.map((item) => (
                <li class="ai-services__list-item">{item}</li>
              ))}
            </ul>

            <!-- CTA Link -->
            <a href={service.href} class="ai-services__link group">
              Learn more
              <ArrowRight className="ai-services__arrow" />
            </a>
          </article>
        );
      })}
    </div>
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     SECTION WRAPPER - Matches ServiceCards section styling exactly
     Using exact computed values from ServiceCards component
     ═══════════════════════════════════════════════════════════════ */
  .ai-services {
    /* Light mode - exact values from ServiceCards */
    /* Card bg: #FEFEFE (white at 50% opacity on white) → #FFFFFF on hover */
    --card-bg: #FEFEFE;
    --card-bg-hover: #FFFFFF;
    /* Border: subtle gray with opacity */
    --card-border: rgba(29, 43, 56, 0.05);
    --card-border-hover: rgba(29, 43, 56, 0.1);
    /* Tailwind shadow (not shadow-sm) - matches ServiceCards exactly */
    --card-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    /* Tailwind shadow-lg for hover */
    --card-shadow-hover: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    /* Icon bg: #E7FCF9 (teal at 10% opacity) */
    --icon-bg: #E7FCF9;
    --icon-color: #12EACB;
    --text-heading: #0f172a;
    --text-body: #64748b;
    --text-link: #0f172a;
    --text-link-hover: #12EACB;
    --bullet-color: #12EACB;

    width: 100%;
    background: #FFFFFF;
    padding: clamp(3rem, 8vw, 6rem) 1.5rem;
    position: relative;
  }

  /* Dark mode - exact values for dark theme */
  :global(.dark) .ai-services {
    --card-bg: rgba(255, 255, 255, 0.03);
    --card-bg-hover: rgba(255, 255, 255, 0.06);
    --card-border: rgba(255, 255, 255, 0.06);
    --card-border-hover: rgba(255, 255, 255, 0.12);
    --card-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.2), 0 1px 2px -1px rgb(0 0 0 / 0.2);
    --card-shadow-hover: 0 10px 15px -3px rgb(0 0 0 / 0.3), 0 4px 6px -4px rgb(0 0 0 / 0.2);
    --icon-bg: rgba(18, 234, 203, 0.1);
    --icon-color: #12EACB;
    --text-heading: #f8fafc;
    --text-body: #94a3b8;
    --text-link: #f8fafc;
    --text-link-hover: #12EACB;
    --bullet-color: #12EACB;
    background: #0c1117;
  }

  .ai-services__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* ═══════════════════════════════════════════════════════════════
     SECTION HEADER
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__header {
    text-align: center;
    margin-bottom: clamp(2rem, 5vw, 3.5rem);
  }

  .ai-services__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: var(--text-heading);
    margin: 0 0 1rem;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .ai-services__subtitle {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--text-body);
    margin: 0 auto;
    max-width: 700px;
    line-height: 1.6;
  }

  /* ═══════════════════════════════════════════════════════════════
     GRID LAYOUT - Responsive 1 → 2 → 4 columns
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .ai-services__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .ai-services__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.25rem;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     SERVICE CARD - Exact match to ServiceCards component:
     bg-card/50 hover:bg-card border-border/50 hover:border-border
     shadow-sm hover:shadow-lg hover:-translate-y-0.5
     transition-all duration-200
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__card {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 0.75rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    box-shadow: var(--card-shadow);
    /* transition-all duration-200 */
    transition: all 0.2s ease;

    /* Staggered animation */
    opacity: 0;
    transform: translateY(16px);
    animation: cardFadeIn 0.5s ease-out forwards;
    animation-delay: var(--animation-delay, 0ms);
  }

  .ai-services__card:hover {
    /* hover:bg-card */
    background: var(--card-bg-hover);
    /* hover:border-border */
    border-color: var(--card-border-hover);
    /* hover:shadow-lg hover:-translate-y-0.5 (2px) */
    box-shadow: var(--card-shadow-hover);
    transform: translateY(-2px);
  }

  @keyframes cardFadeIn {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-services__card {
      animation: none;
      opacity: 1;
      transform: none;
    }
    .ai-services__card:hover {
      transform: none;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     ICON BOX - Matching ServiceCards styling
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__icon-box {
    width: 3rem;
    height: 3rem;
    border-radius: 0.75rem;
    background: var(--icon-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
  }

  .ai-services__icon-box :global(.ai-services__icon) {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--icon-color);
  }

  /* ═══════════════════════════════════════════════════════════════
     CARD TYPOGRAPHY - Exact match to ServiceCards:
     Title: text-xl font-medium text-foreground mb-3
     Desc: text-[15px] text-muted-foreground leading-relaxed flex-1
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__card-title {
    /* text-xl = 1.25rem */
    font-size: 1.25rem;
    /* font-medium = 500 */
    font-weight: 500;
    color: var(--text-heading);
    /* mb-3 = 0.75rem */
    margin: 0 0 0.75rem;
    line-height: 1.25;
  }

  .ai-services__card-desc {
    /* text-[15px] = 0.9375rem */
    font-size: 0.9375rem;
    color: var(--text-body);
    /* leading-relaxed */
    line-height: 1.625;
    margin: 0;
    /* flex-1 - handled by bullet list flex:1 */
  }

  /* ═══════════════════════════════════════════════════════════════
     BULLET LIST - Custom styling for AI Services
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__list {
    list-style: none;
    /* Space before list and after description */
    margin: 1rem 0 0;
    padding: 0;
    /* Take up remaining space before link */
    flex: 1;
  }

  .ai-services__list-item {
    position: relative;
    padding-left: 0.875rem;
    /* Match description size */
    font-size: 0.9375rem;
    color: var(--text-body);
    line-height: 1.625;
    margin-bottom: 0.25rem;
  }

  .ai-services__list-item::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0.625em;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--bullet-color);
  }

  /* ═══════════════════════════════════════════════════════════════
     CTA LINK - Exact match to ServiceCards:
     inline-flex items-center gap-1.5 mt-5 text-[15px] font-medium
     text-foreground hover:text-primary transition-colors
     Arrow: h-3.5 w-3.5 group-hover:translate-x-0.5
     ═══════════════════════════════════════════════════════════════ */
  .ai-services__link {
    display: inline-flex;
    align-items: center;
    /* gap-1.5 = 0.375rem */
    gap: 0.375rem;
    /* mt-5 = 1.25rem */
    margin-top: 1.25rem;
    /* text-[15px] */
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-link);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-services__link:hover {
    color: var(--text-link-hover);
  }

  .ai-services__link :global(.ai-services__arrow) {
    /* h-3.5 w-3.5 = 0.875rem = 14px */
    width: 0.875rem;
    height: 0.875rem;
    transition: transform 0.2s ease;
  }

  .ai-services__link:hover :global(.ai-services__arrow) {
    /* group-hover:translate-x-0.5 = 2px */
    transform: translateX(2px);
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE ADJUSTMENTS
     ═══════════════════════════════════════════════════════════════ */
  @media (max-width: 639px) {
    .ai-services {
      padding: 2.5rem 1rem;
    }

    .ai-services__card {
      padding: 1.25rem;
    }

    .ai-services__icon-box {
      width: 2.5rem;
      height: 2.5rem;
    }

    .ai-services__icon-box :global(.ai-services__icon) {
      width: 1.25rem;
      height: 1.25rem;
    }

    .ai-services__card-title {
      font-size: 1.125rem;
    }

    .ai-services__card-desc {
      font-size: 0.875rem;
    }
  }

  @media (min-width: 1024px) {
    .ai-services__card {
      padding: 1.5rem;
    }

    .ai-services__list-item {
      font-size: 0.8125rem;
    }
  }

  @media (min-width: 1280px) {
    .ai-services__grid {
      gap: 1.5rem;
    }
  }
</style>
