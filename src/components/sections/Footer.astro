---
import { Button } from '../ui/button';
import { ArrowRight, Linkedin, Github } from 'lucide-react';

const today = new Date();
const feedUrl = new URL('rss.xml', Astro.site).toString();
const feedlyUrl = `https://feedly.com/i/subscription/feed/${feedUrl}`;
const inoreaderUrl = `https://www.inoreader.com/?add_feed=${feedUrl}`;
---

<footer class="footer-section">
  <!-- CTA Section -->
  <section class="py-16 md:py-24 text-center footer-cta">
    <div class="max-w-xl mx-auto px-6">
      <h2 class="text-2xl md:text-4xl font-normal leading-tight mb-4 text-foreground">
        Ready for the AI search revolution?
      </h2>
      <p class="text-base text-muted-foreground mb-8 leading-relaxed">
        Let's discuss how SEO and GEO strategies can keep your brand visible across every search surface.
      </p>
      <a href="/contact">
        <Button className="rounded-full px-8 py-6 text-base font-medium gap-2 group">
          Get in touch
          <ArrowRight className="h-4 w-4 transition-transform group-hover:translate-x-1" />
        </Button>
      </a>
    </div>
  </section>

  <!-- Footer Main -->
  <div class="border-t border-border px-6 py-12">
    <div class="max-w-6xl mx-auto footer-grid">
      <!-- Brand -->
      <div class="flex flex-col gap-3">
        <a href="/" class="inline-flex items-center gap-3 text-foreground text-lg font-medium no-underline group">
          <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center transition-transform duration-200 group-hover:scale-105">
            <span class="text-primary-foreground font-bold text-sm tracking-tight">AC</span>
          </div>
          <span>Austin Crockett</span>
        </a>
        <p class="text-sm text-muted-foreground m-0">SEO & GEO Specialist</p>
      </div>

      <!-- Navigation & Social - All 3 columns in same row on mobile -->
      <nav class="footer-nav-columns" aria-label="Footer navigation">
        <div class="flex flex-col gap-3">
          <h3 class="text-xs font-semibold uppercase tracking-widest text-muted-foreground m-0">Pages</h3>
          <ul class="list-none m-0 p-0 flex flex-col gap-2">
            <li><a href="/" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">Home</a></li>
            <li><a href="/portfolio" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">Portfolio</a></li>
            <li><a href="/about" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">About</a></li>
            <li><a href="/blog" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">Blog</a></li>
            <li><a href="/contact" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">Contact</a></li>
          </ul>
        </div>

        <div class="flex flex-col gap-3">
          <h3 class="text-xs font-semibold uppercase tracking-widest text-muted-foreground m-0">Resources</h3>
          <ul class="list-none m-0 p-0 flex flex-col gap-2">
            <li><a href="/llms.txt" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">LLMS.txt</a></li>
            <li><a href="/sitemap.html" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">Sitemap</a></li>
            <li><a href={feedlyUrl} target="_blank" rel="noopener noreferrer" class="text-[15px] text-foreground/80 no-underline hover:text-primary transition-colors">RSS Feed</a></li>
          </ul>
        </div>

        <!-- Social -->
        <div class="flex flex-col gap-3">
          <h3 class="text-xs font-semibold uppercase tracking-widest text-muted-foreground m-0">Connect</h3>
          <div class="flex gap-3">
            <a
              href="https://linkedin.com/in/austincrockett"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
              class="flex items-center justify-center w-10 h-10 rounded-full bg-muted text-foreground/80 hover:bg-primary hover:text-primary-foreground hover:-translate-y-0.5 transition-all"
            >
              <Linkedin className="h-5 w-5" />
            </a>
            <a
              href="https://github.com/misterflacko"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="GitHub"
              class="flex items-center justify-center w-10 h-10 rounded-full bg-muted text-foreground/80 hover:bg-primary hover:text-primary-foreground hover:-translate-y-0.5 transition-all"
            >
              <Github className="h-5 w-5" />
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!-- Copyright -->
    <div class="max-w-6xl mx-auto mt-8 pt-8 border-t border-border text-center">
      <p class="text-sm text-muted-foreground m-0">&copy; {today.getFullYear()} Austin Crockett. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background: hsl(var(--muted));
  }

  .footer-cta {
    background: linear-gradient(to bottom, hsl(var(--muted) / 0.5), hsl(var(--muted)));
  }

  /* Dark mode: keep the darker aesthetic */
  :global(.dark) .footer-section {
    background: hsl(222 47% 6%);
  }

  :global(.dark) .footer-cta {
    background: linear-gradient(to bottom, hsl(222 47% 4%), hsl(222 47% 6%));
  }

  /* Footer grid - Brand above, nav columns below on mobile */
  .footer-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Navigation columns - always 3 columns in a row */
  .footer-nav-columns {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  /* Tablet and up - 4 column layout with brand */
  @media (min-width: 768px) {
    .footer-grid {
      display: grid;
      grid-template-columns: 1.5fr repeat(3, 1fr);
      gap: 2rem;
    }

    .footer-nav-columns {
      display: contents;
    }
  }

  /* Compact text on mobile */
  @media (max-width: 767px) {
    .footer-nav-columns {
      gap: 1rem;
    }

    .footer-nav-columns h3 {
      font-size: 0.5625rem;
      letter-spacing: 0.08em;
    }

    .footer-nav-columns a {
      font-size: 0.75rem;
    }

    .footer-nav-columns ul {
      gap: 0.25rem;
    }
  }

  /* Even more compact on very small screens */
  @media (max-width: 400px) {
    .footer-nav-columns h3 {
      font-size: 0.5rem;
    }

    .footer-nav-columns a {
      font-size: 0.6875rem;
    }
  }
</style>

<script type="module">
  document.addEventListener('click', (e) => {
    const target = e.target;
    if (!(target instanceof HTMLElement)) return;
    if (target.matches('button[data-copy]')) {
      const url = target.getAttribute('data-copy');
      if (!url) return;
      navigator.clipboard?.writeText(url);
      const original = target.textContent || 'Copy RSS link';
      target.textContent = 'Copied!';
      setTimeout(() => { target.textContent = original; }, 1500);
    }
  });
</script>
