---
import { Card, CardContent } from '../ui/card';
import { Badge } from '../ui/badge';

interface StudyItem {
  title: string;
  institution: string;
  description: string;
  tags?: string[];
}

interface Props {
  items: StudyItem[];
  title?: string;
}

const { items, title } = Astro.props as Props;
---

<section class="w-full py-8 md:py-12">
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-semibold text-center mb-10 md:mb-14 text-foreground tracking-tight">{title}</h2>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
      {items.map((study) => (
        <Card className="bg-card/50 hover:bg-card border-border/50 hover:border-border transition-all duration-200">
          <CardContent className="p-6">
            <h3 class="text-xl font-semibold text-foreground">{study.title}</h3>
            <div class="mt-1 text-sm text-muted-foreground">{study.institution}</div>
            <p class="mt-3 text-muted-foreground">{study.description}</p>
            {study.tags && study.tags.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {study.tags.map((tag) => (
                  <Badge variant="secondary" className="bg-primary/10 text-primary border border-primary/30 hover:bg-primary/20">
                    {tag}
                  </Badge>
                ))}
              </div>
            )}
          </CardContent>
        </Card>
      ))}
    </div>
  </div>
</section>
